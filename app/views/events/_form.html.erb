 </div>
  <div class="field">
    <%= f.label :date, class:"update-date-label" %>
    <%= f.date_select :date, class:"update-date" %>
  </div>
  <div class="field">
    <%= f.label :time, class:"update-time-label" %>
    <%= f.time_select :time, class:"update-time" %>
  </div>
  <div class="field">
    <%= f.label :parent_id %>
    <%= f.collection_select(:parent_id, User.where(id: session[:user_id]), :id, :first_name, {prompt: "Select Parent"}) %>
  </div>
