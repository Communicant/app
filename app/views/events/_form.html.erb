<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<section class="update-event-container">

  <div class="field">
    <%= f.label :title, class:"update-title-label" %>
    <%= f.text_field :title, class:"update-title-field" %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, class:"update-description-field" %>
  </div>
  <div class="field">
    <%= f.label :date, class:"update-date-label" %>
    <%= f.date_select :date, class:"update-date" %>
  </div>
  <div class="field">
    <%= f.label :time, class:"update-time-label" %>
    <%= f.time_select :time, class:"update-time" %>
  </div>
  <div class="field">
    <%= f.label :parent_id %>
    <%= f.number_field :parent_id %>
  </div>
  <div class="field">
    <%= f.label :child_id %>
    <%= f.number_field :child_id %>
  </div>
  <div class="field">
    <%= f.label :mediator_id %>
    <%= f.number_field :mediator_id %>
  </div>
  <div class="field">
    <%= f.label :pending %>
    <%= f.check_box :pending %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

  <%= link_to 'Details', @event, class:"update-details" %>
  <%= link_to 'Back', events_path, class:"update-back" %>

<% end %>
</section>
