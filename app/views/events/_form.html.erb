
<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<section class="update-event-container">

  <div class="field">
    <%= f.label :event %>
    <%= f.select("title", @event_titles, {:include_blank => "Please select an event"})%>
  </div>

  <div class="field">
    <%= f.label :date, class:"update-date-label" %>
   <%= f.date_field :date, class:"update-date" %>
  </div>

  <div class="field">
    <%= f.label :time, class:"update-time-label" %>
    <%= f.time_field :time, class:"update-time" %>
  </div>

  <div class="field">
    <%= f.label :location, class:"update-location-label" %>
    <%= f.select("location", @event_locations, {:include_blank => "Please select a location"}, {class:"update-location-field"}) %>
  </div>
