  <!-- </div> -->

  <div class="field">
    <%= f.label :child %>
    <%= collection_select(:event, :child_id, Child.all, :id, :first_name, {:prompt => 'Please select A Child'}, {class: "update-date-label"}) %>
  </div>
    <%= f.hidden_field :user_id, value: params[:user_id] %>


  <div class="actions">
    <%= (f.submit class:"update-create") %>
  <%# link_to 'Details', @event, class:"update-details" %>
