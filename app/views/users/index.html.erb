<main class="users-container">

<!-- <h2>All users</h2> -->

<table class="users-table">
  <thead>
    <tr class="users-first-row">
      <th>Type</th>
      <th>Username</th>
      <!-- <th>Password digest</th> -->
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Phone number</th>
      <th>Case number</th>
      <!-- <th>Case</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>
  <!-- <main>

    <section>

    </section>

  </main> -->

  <tbody class="users-body">
    <% @users.each do |user| %>
      <tr class="users-row">
        <td><%= user.type %></td>
        <td><%= user.username %></td>
        <!-- <td><%= user.password_digest %></td> -->
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.address %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.case_number %></td>
        <!-- <td><%= user.case_id %></td> -->
        <td class="users-details"><%= link_to 'Details', user %></td>
        <td class="users-update"><%= link_to 'Update', edit_user_path(user) %></td>
        <!-- <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

</main>

