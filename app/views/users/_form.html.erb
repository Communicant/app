<% form_for @user, as: :user, url: user_path(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<section class="user-update-container">

  <div class="field">
    <%= f.label :type %>
    <%= f.text_field :type, class:"user-update-type" %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.text_field :password_digest, class:"user-update-password" %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, class:"user-update-email" %>
  </div>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class:"user-update-first" %>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class:"user-update-last" %>
  </div>
  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address, class:"user-update-address" %>
  </div>
  <div class="field">
    <%= f.label :phone_number %>
    <%= f.number_field :phone_number, class:"user-update-phone" %>
  </div>
  <div class="actions">
    <%= (f.submit class:"user-update-submit") %>
  </div>
<% end %>

<%= link_to 'Details', user_path(@user), class:"user-update-details" %>
<%= link_to 'Back', users_path, class:"user-update-back" %>

</section>
