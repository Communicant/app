<section class="payments-container">

  <p id="notice"><%= notice %></p>

  <h1 class="payments-heading">Listing Payments</h1>

  <table class="payments-table">
    <thead class="payments-thead">
      <tr>
        <th class="payments-col">Title</th>
        <th class="payments-col">Amount</th>
        <th class="payments-col">Parent</th>
        <th class="payments-col">Created at</th>
        <th class="payments-col">Updated at</th>
        <th class="payments-col">Paid at</th>
        <!-- <th class="payments-col">Cost</th> -->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="payments-tbody">
      <% @payments.each do |payment| %>
        <tr>
          <td class="payments-data"><%= payment.title %></td>
          <td class="payments-data"><%= payment.amount %></td>
          <td class="payments-data"><%= payment.parent_id %></td>
          <td class="payments-data"><%= payment.created_at %></td>
          <td class="payments-data"><%= payment.updated_at %></td>
          <td class="payments-data"><%= payment.paid_at %></td>
          <!-- <td class="payments-data"><%= payment.cost_id %></td> -->
          <td class="payments-edit"><%= link_to 'Show', payment %></td>
          <td class="payments-edit"><%= link_to 'Edit', edit_payment_path(payment) %></td>
          <td class="payments-edit"><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <div class="new-payment"><%= link_to 'New Payment', new_payment_path %></div>
</section><!--.payments-container-->
