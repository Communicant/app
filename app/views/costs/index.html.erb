<section class="costs-container">

  <p id="notice"><%= notice %></p>

<h1 class="costs-heading">Listing Costs</h1>

<table class="costs-table">
  <thead class="costs-thead">
    <tr>
      <th class="costs-col">Title</th>
      <th class="costs-col">Due</th>
      <th class="costs-col">Amount</th>
      <th class="costs-col">Parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <tbody class="costs-tbody">
      <% @costs.each do |cost| %>
        <tr>
          <td class="costs-data costs-title"><%= cost.title %></td>
          <td class="costs-data costs-due"><%= cost.due %></td>
          <td class="costs-data costs-amount">$<%= cost.amount %></td>
          <td class="costs-data costs-parent"><%= cost.parent_id %></td>
          <td class="costs-edit"><%= link_to 'Show', cost %></td>
          <td class="costs-edit"><%= link_to 'Edit', edit_cost_path(cost) %></td>
        </tr>
      <% end %>
    </tbody>
  </table><!--.costs-table-->

  <p class="total">Total: $<%=Cost.total_amount %></p>

  <br>

  <div class="new-costs"><%= link_to 'New Cost', new_cost_path %></div>

</section><!--.costs-container-->


<section class="costs-container">

  <p id="notice"><%= notice %></p>

<h1 class="payments-heading">Listing Payments</h1>

<table class="payments-table">
  <thead class="payments-thead">
    <tr>
      <th class="payments-col">Title</th>
      <th class="payments-col">Due</th>
      <th class="payments-col">Amount</th>
      <th class="payments-col">Payment Date</th>
      <th class="payments-col">Parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <tbody class="payments-tbody">
      <% @payments.each do |payment| %>
        <tr>
          <td class="payments-data payments-title"><%= payment.title %></td>
          <td class="payments-data payments-amount">$<%= payment.amount %></td>
          <td class="payments-data payments-parent"><%= payment.parent_id %></td>
          <td class="payments-data payments-paid"><%= payment.paid_at %></td>
          <td class="payments-data payments-cost"><%= payment.cost_id %></td>
          <td class="payments-edit"><%= link_to 'Show', payment %></td>
          <td class="payments-edit"><%= link_to 'Edit', edit_payment_path(payment) %></td>
          <td class="payments-edit" id="payments-destroy"><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table><!--.payments-table-->

  <p class="total">Total: $<%=Payment.total_amount %> </p>

  <br>

  <div class="new-payments"><%= link_to 'New Payment', new_payment_path %></div>

</section><!--.payments-container-->
