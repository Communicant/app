
<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table table class="table table-striped">

  <section class="update-profile-container">
    <div class="field">
      <%= f.label :case_number %>
      <%= f.number_field :case_number, class:"update-profile-case" %>
    </div>
    <br><br>
  <div class="field">
    <%= f.label :parent_name, class:"update-profile-n" %>
    <%= f.text_field :name, class:"update-profile-name" %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, class:"update-profile-email" %>
  </div>
  <div class="field">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, class:"update-profile-phone" %>
  </div>
  <br><br>
  <div class="field">
    <%= f.label :parent2_name, class:"update-profile-n" %>
    <%= f.text_field :name2, class:"update-profile-name" %>
  </div>
  <div class="field">
    <%= f.label :email2 %>
    <%= f.text_field :email2, class:"update-profile-email" %>
  </div>
  <div class="field">
    <%= f.label :phone_number2 %>
    <%= f.text_field :phone2, class:"update-profile-phone" %>
  </div>
  <br><br>
  <div class="field">
    <%= f.label :child_name %>
    <%= f.text_field :child_name, class:"update-profile-child" %>
  </div>

  <div class="field">
    <%= f.label :mediator_name %>
    <%= f.text_field :mediator_name, class:"update-profile-med" %>
  </div>
  <div class="actions">
    <%= (f.submit class:"update-profile-submit") %>
  </div>

<%= link_to 'Details', @profile, class:"update-profile-details" %>
<%= link_to 'Back', profiles_path, class:"update-profile-back" %>

<% end %>
</section>
</table>
